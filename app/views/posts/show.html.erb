<div>
  <div class="row">
    <div class="col-md-12">
      <h1><%= @post.title %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p><%= simple_format(@post.body) %></p>
    </div>
  </div>
  <% if admin_signed_in? %>
  <div class="row">
    <div class="col-md-12">
        <div class="pull-right">
          <labels>Actions:</labels>
          <%= link_to 'Edit', edit_post_path(@post) %> |
          <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
  </div>
  <% end %>
  <%= render "comments/form", comment: @post.comments.new %>
  <% @comments.each do |comment| %>
    <label><%= comment.email %> Disse:</label>
    <p><%= comment.id %></p>
    <%= link_to "Delete", delete_comments_path(comment.id.to_i), method: :delete, data: {confirm: "VocÃª tem serteza?"} %>
  <% end %>
</div>
